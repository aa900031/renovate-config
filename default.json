{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [
		"config:recommended",
		"group:allNonMajor",
		":semanticCommitTypeAll(chore)",
		":disablePeerDependencies",
		":prHourlyLimitNone"
	],
	"meteor": {
		"enabled": false
	},
	"rangeStrategy": "bump",
	"postUpdateOptions": [
		"pnpmDedupe"
	],
	"npm": {
		"commitMessageTopic": "{{prettyDepType}} {{depName}}"
	},
	"packageRules": [
		{
			"enabled": false,
			"matchUpdateTypes": [
				"major"
			]
		},
		{
			"groupName": "npm corepack major dependencies",
			"groupSlug": "npm-package-manager-major",
			"matchDepTypes": [
				"packageManager"
			],
			"matchUpdateTypes": [
				"major"
			],
			"enabled": true
		},
		{
			"groupName": "npm corepack non-major dependencies",
			"groupSlug": "npm-package-manager-minor-patch",
			"matchDepTypes": [
				"packageManager"
			],
			"matchUpdateTypes": [
				"minor",
				"patch"
			],
			"enabled": true
		},
		{
			"groupName": "{{manager}} non-major dependencies",
			"groupSlug": "{{manager}}-minor-patch",
			"matchUpdateTypes": [
				"minor",
				"patch"
			],
			"matchDepTypes": [
				"dependencies"
			],
			"matchPackageNames": [
				"*"
			],
			"enabled": true
		},
		{
			"groupName": "{{manager}} non-major develop dependencies",
			"groupSlug": "{{manager}}-dev-minor-patch",
			"matchUpdateTypes": [
				"minor",
				"patch"
			],
			"matchDepTypes": [
				"devDependencies"
			],
			"matchPackageNames": [
				"*"
			],
			"enabled": true
		}
	]
}
